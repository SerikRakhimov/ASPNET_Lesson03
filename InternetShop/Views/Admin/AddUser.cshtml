@model InternetShop.Models.User
<p>
    <h3 class="text-success">Регистрация нового пользователя</h3>
</p>

<Form  method="post" action="/Admin/AddUser">
    <div class="form-group">
        <label for="loginId" class="text-primary">Логин</label>
        <input class="form-control" name="Login" id="loginId" aria-describedby="loginHelp">
        <small id="loginHelp" class="form-text text-muted">Введите логин для входа в сеть</small>
    </div>
    <div class="form-group">
        <label for="passwordId" class="text-primary">Пароль</label>
        <input class="form-control" name="Password" id="passwordId" aria-describedby="passwordHelp">
        <small id="passwordHelp" class="form-text text-muted">Введите пароль для входа в сеть</small>
    </div>
    <button class="btn-primary btn-lg" type="submit">Зарегистрировать</button>
</Form>